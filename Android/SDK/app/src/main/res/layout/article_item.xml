<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/article_item_padding">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_cardview_height"
        android:layout_margin="@dimen/article_cardview_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/articleImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/article_image_height"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/article_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/articleSnippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/articleImage"
                android:maxLines="3"
                android:padding="@dimen/article_snipper_padding"
                android:textColor="@color/textColor"
                android:textSize="@dimen/article_snippet_font_size"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>