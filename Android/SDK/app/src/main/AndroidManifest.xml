<?xml version="1.0" encoding="utf-8"?>
<manifest package="qvdev.com.blendle"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Blendle">
        <activity
            android:name=".BlendleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ArticleDetailActivity"
            android:parentActivityName=".BlendleActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BlendleActivity"/>
        </activity>

    </application>

</manifest>
